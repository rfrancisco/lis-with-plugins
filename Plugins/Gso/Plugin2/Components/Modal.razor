@using MudBlazor

<MudDialog Style="border: 4px dashed var(--mud-palette-tertiary);">
      <TitleContent>
        <MudText Typo="Typo.h6">
            <MudIcon Icon="@Icons.Material.Filled.Umbrella" Class="mr-3 mb-n1"/>
            Cancel all Interventions
        </MudText>
    </TitleContent>
    <DialogContent>
        This action will complete all interventions related to sweeping, washing and cleaning of streets open to date.
        <br>
        <br>
        Do you wish to continue?
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">No</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Yes, continue and cancel all</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; }

    void Submit() {
        MudDialog.Close(DialogResult.Ok(true));
    }

    void Cancel() {
        MudDialog.Cancel();
    }
}